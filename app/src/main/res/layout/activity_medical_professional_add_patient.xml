<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicalProfessionalAddPatientActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_left_long" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="MoniCov"
        android:textColor="@color/moderateBlue_3347C4"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:text="Add Patient"
        android:textColor="@color/darkBlue_0C159F"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Fill up this form"
        android:textColor="@color/moderateBlue_3347C4"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etAddUsername"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="Username"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etAddFirstName"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="Firstname"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/etAddUsername"
        app:layout_constraintStart_toStartOf="@+id/etAddUsername"
        app:layout_constraintTop_toBottomOf="@+id/etAddUsername" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etAddLastName"
        android:layout_width="375dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:hint="Surname"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/etAddFirstName"
        app:layout_constraintStart_toStartOf="@+id/etAddFirstName"
        app:layout_constraintTop_toBottomOf="@+id/etAddFirstName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        android:layout_width="315dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="284dp"
        android:backgroundTint="@color/darkBlue_0C159F"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etAddLastName"
        app:layout_constraintStart_toStartOf="@+id/etAddLastName"
        app:layout_constraintTop_toBottomOf="@+id/etAddLastName" />


</androidx.constraintlayout.widget.ConstraintLayout>